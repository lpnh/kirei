{#
    Ice cream card component - supports various display modes
    Variables that can be set before including:
    - show_availability (default true) - show availability status
    - show_position (default false) - show position number
    - show_first_choice (default false) - highlight as first choice
    - card_style - additional CSS for the card wrapper
    - emoji_style - additional CSS for the emoji
#}
{% set show_availability = show_availability | default(default_value=true) %}
{% set show_position = show_position | default(default_value=false) %}
{% set show_first_choice = show_first_choice | default(default_value=false) %}
{% set card_style = card_style | default(default_value="") %}
{% set emoji_style = emoji_style | default(default_value="") %}
<div class="card" style="{{ card_style }}">
    {# First choice badge #}
    {% if show_first_choice %}
        <div style="background: gold; color: #333; padding: 2px 8px; border-radius: 12px; font-size: 0.8em; margin-bottom: 8px; display: inline-block;">
            ðŸ¥‡ First Choice
        </div>
    {% endif %}
    {# Emoji with optional styling #}
    <div style="text-align:center;font-size:2em;{{ emoji_style }}">
        {{ ice_cream.emoji }}
    </div>
    {# Name and popularity badge #}
    <h3 style="margin:8px 0">
        {{ ice_cream.name }}
        {% if ice_cream.popularity == 5 %}
            <span class="popular-badge">Member Favorite</span>
        {% endif %}
    </h3>
    {# Description #}
    <p style="color:var(--muted);font-size:0.95em">{{ ice_cream.description }}</p>
    {# Rating and status/position row #}
    <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
        <div>
            {% for star in 1..=5 %}
                {% if star <= ice_cream.popularity %}
                    â­
                {% else %}
                    â˜†
                {% endif %}
            {% endfor %}
        </div>
        <div>
            {% if show_availability %}
                {% if ice_cream.available %}
                    <span style="color:green;font-size:0.9em">Available today</span>
                {% else %}
                    <span style="color:var(--muted);font-size:0.9em">Coming soon</span>
                {% endif %}
            {% endif %}
            {% if show_position %}
                <span style="font-size:0.8em;color:green">#{{ position }}</span>
            {% endif %}
        </div>
    </div>
    {# Seasonal badge #}
    {% if ice_cream.seasonal %}
        <div style="font-size:0.8em;margin-top:8px">
            <span style="color:orange">ðŸŒ± Seasonal special</span>
        </div>
    {% endif %}
</div>
